<h1>Add a New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<h3>Add a Review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Review Content" %>
  <%= f.input :rating, as: :select, collection: (0..5).to_a, label: "Rating (0-5)" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
